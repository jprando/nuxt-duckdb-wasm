{
  "mcpServers": {
    "nuxt": {
      "command": "pnpx",
      "args": [
        "mcp-remote",
        "https://nuxt.com/mcp"
      ],
      "trust": true
    },
    "nuxt-ui": {
      "command": "pnpx",
      "args": [
        "mcp-remote",
        "https://ui.nuxt.com/mcp"
      ],
      "trust": true
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "trust": true
    }
  }
}
